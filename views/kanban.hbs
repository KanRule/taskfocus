<nav class="demo" style="position: absolute;">
  <a href="/" class="brand">TaskFocus</a>
</nav>
<center style="margin-top: 50px;">
<h2>Tasks in Focus</h2>
</center>
<div id="myKanban">
  <div class="kanban-container" v-bind:style="{'width': wallWidth+'px'}">
    <div class="kanban-board" v-for="board in boardList" v-bind:data-id="board.id" v-bind:style="{'width': boardWidth+'px', 'margin-left': gutter+'px', 'margin-right': gutter+'px'}">
      <header class="kanban-board-header">
        <div class="kanban-board-title">\{{board.title}}</div>
        <div class='kanban-board-title-form' style="display: none">
          <input type="text" v-bind:value="board.title" v-bind:defaultvalue="board.title"></input>
          <br>
          <button type="submit">Save</button>
          <a class="cancel" style="font-size: 24px; float: right;">X</a>
        </div>
      </header>
      <main class="kanban-drag">
        <div class="kanban-item" v-for="card in board.item" v-bind:data-eid="card.id">\{{card.title}}</div>
      </main>
      <footer>
        <div class='kanban-add'>+ Add Item</div>
        <div class='kanban-addcard-form' style="display: none">
          <textarea class='kanban-add-textarea'></textarea>
          <br>
          <button class='kanban-add-btn'>Add</button>
          <a class="cancel" style="font-size: 24px; float: right;">X</a>
        </div>
      </footer>
    </div>
    <div class='kanban-board' v-bind:style="{'width': boardWidth+'px', 'margin-left': gutter+'px', 'margin-right': gutter+'px'}">
      <header class='kanban-board-header'>
        <a class='kanban-addboard-btn'>+ Add Board</a>
        <div class='kanban-addboard-form' style="display: none">
          <input type="text" placeholder="Add Board"></input>
          <br>
          <button type="submit">Save</button>
          <a class="cancel" style="font-size: 24px; float: right;">X</a>
        </div>
      </header>
    </div>
  </div>
</div>
